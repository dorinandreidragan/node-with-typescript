{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6"
    ],
    "module": "commonjs",      
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true, 
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [],
  "include": [
    "./src/*"
  ]
}
